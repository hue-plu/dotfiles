!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------
Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
!-------------------------------------------------------------------------------
URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            10000
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           true
URxvt*font: xft:Gen Shin Gothic Monospace Bold:size=10:antialias=true

! Fix font space
URxvt*letterSpace: -4

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Reference:
! https://nixmeal.wordpress.com/2012/07/24/copypaste-text-in-urxvt-rxvt-unicode-using-keyboard/
! Perl extensions
URxvt.perl-lib: ~/.urxvt/ext/
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.iso14755: False
URxvt.perl-ext-common: default,clipboard

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

! iso 14755 disable
URxvt*iso14755: false

! Color
! スケスケにするためのパラメータ
! urxvt*shading: 20 
urxvt*shading: 10
URxvt*inheritPixmap: true

! Molokai
!!Source https://github.com/brianbuccola/dotfiles/blob/master/xcolors/molokai
! vim: set ft=xdefaults:
URxvt*background:   #232323
URxvt*foreground:   #b7bbb7

URxvt*cursorColor:  #d0d0d0

URxvt*colorBD:      #3579a8
URxvt*colorUL:      #4eb4fa

! black
URxvt*color0  : #2c2f33
URxvt*color8  : #4b5056
! red
URxvt*color1  : #b04c50
URxvt*color9  : #b04c50
! green
