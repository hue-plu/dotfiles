!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------
Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
!-------------------------------------------------------------------------------
URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            10000
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           true
URxvt*font: xft:Gen Shin Gothic Monospace Bold:size=10:antialias=true

! Fix font space
URxvt*letterSpace: -4

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,tabbedex,clipboard
URxvt.matcher.button:       1
URxvt.urlLauncher:          google-chrome
URxvt.keysym.M-t:           perl:tabbedex:new_tab
URxvt.keysym.M-n:           perl:tabbedex:next_tab
URxvt.keysym.M-p:           perl:tabbedex:prev_tab
URxvt.tabbed.no-tabbedex-keys: true
URxvt.tabbed.not-consumable-keys: 0xff22, 0xff23, 0xff2a

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

! iso 14755 disable
URxvt*iso14755: false

! Color
! スケスケにするためのパラメータ
! urxvt*shading: 20 
urxvt*shading: 10
URxvt*inheritPixmap: true

! Molokai
!!Source https://github.com/brianbuccola/dotfiles/blob/master/xcolors/molokai
! vim: set ft=xdefaults:
URxvt*background:   #232323
URxvt*foreground:   #b7bbb7

URxvt*cursorColor:  #d0d0d0

URxvt*colorBD:      #3579a8
URxvt*colorUL:      #4eb4fa

! black
URxvt*color0  : #2c2f33
URxvt*color8  : #4b5056
! red
URxvt*color1  : #b04c50
URxvt*color9  : #b04c50
! green
URxvt*color2  : #b6f48f
URxvt*color10 : #c8f7ad
! yellow
URxvt*color3  : #f0e08e
URxvt*color11 : #f0e08e
! blue
URxvt*color4  : #66899d
URxvt*color12 : #66899d
! magenta
URxvt*color5  : #8f6494
URxvt*color13 : #8f6494
! cyan
URxvt*color6  : #527c77
URxvt*color14 : #527c77
! white
URxvt*color7  : #606360
URxvt*color15 : #dde3dc
!-------------------------------------------------------------------------------
! Emacs settings
!-------------------------------------------------------------------------------
! 透明にできない...
Emacs*foreground: white
Emacs*background: black

!emacs.transparent: false
!emacs*shading: 10

Emacs*useXIM: true
